{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

	{% for etablissement in etablissements %}
		<h1>{{ etablissement.nom | capitalize }}</h1>
		<p>{{ etablissement.ville | capitalize }}</p>
		<p>{{ etablissement.adresse | capitalize }}</p>
	{% endfor %}

	{% for suite in suites %}
		<img src="{{ suite.imgPath | capitalize }}">
		<h1>{{ suite.titre | capitalize }}</h1>
		<p>{{ suite.description | capitalize }}</p>
		<p>{{ suite.prix | capitalize }} $</p>
	{% endfor %}
	
</div>
{% endblock %}
